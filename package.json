{
  "name": "artifact-index",
  "version": "1.0.0",
  "description": "MCP server and research artifacts for the 2020 Human Artifact Index",
  "type": "module",
  "main": "dist/mcp-server.js",
  "scripts": {
    "dev:stdio": "ts-node --esm src/mcp-server.ts --stdio",
    "dev:http": "ts-node --esm src/mcp-server.ts --http --port 3000",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/mcp-server.js --http --port ${PORT:-3000}",
    "test": "echo \"No automated tests yet\" && exit 0",
    "agent": "ts-node --esm report-generation-agent.ts",
    "agent:generate": "ts-node --esm report-generation-agent.ts generate",
    "agent:parse": "ts-node --esm report-generation-agent.ts parse",
    "agent:load": "ts-node --esm report-generation-agent.ts load"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "express": "^5.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "zod": "^4.1.13"
  }
}
